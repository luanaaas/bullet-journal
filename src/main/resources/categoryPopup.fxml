<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <AnchorPane prefHeight="250.0" prefWidth="250.0">
      <children>
         <VBox alignment="TOP_CENTER" prefHeight="250.0" prefWidth="250.0" spacing="20.0">
            <children>
               <HBox prefHeight="10.0" prefWidth="250.0">
                  <children>
                     <Button mnemonicParsing="false" text="X" fx:id="xxCategory" />
                  </children>
               </HBox>
               <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="30.0" prefWidth="250.0" text="Create New Category" textAlignment="CENTER">
                  <padding>
                     <Insets bottom="20.0" top="20.0" />
                  </padding>
                  <font>
                     <Font name="Avenir Next Bold" size="13.0" />
                  </font>
               </Label>
               <Label text="Add New Catagory">
                  <font>
                     <Font name="Avenir Book" size="13.0" />
                  </font>
               </Label>
               <TextField fx:id="newCategory" prefHeight="25.0" prefWidth="160.0">
                  <VBox.margin>
                     <Insets left="20.0" right="20.0" />
                  </VBox.margin>
               </TextField>
               <Button fx:id="doneCategory" mnemonicParsing="false" text="Done" />
            </children>
         </VBox>
      </children></AnchorPane>
</Scene>
